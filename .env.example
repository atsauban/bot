AUTH_FOLDER=./storage/auth
LOG_LEVEL=info

# Mode autentikasi: pilih salah satu
# AUTH_METHOD=qr      # pakai QR saja
# AUTH_METHOD=pairing # pakai Kode Pairing (Link with number)
# AUTH_METHOD=auto    # default; pairing jika nomor terisi, selain itu QR
AUTH_METHOD=auto

# Pairing via nomor telepon (opsional, diperlukan jika AUTH_METHOD=pairing)
# Isi dengan nomor lengkap pakai kode negara tanpa tanda +, contoh: 6281234567890
# Jika diisi dan AUTH_METHOD=auto, bot akan menawarkan kode pairing
PAIR_PHONE_NUMBER=

# Backward compatibility (opsional): jika true akan memaksa pairing saat start
# (hanya dipakai jika AUTH_METHOD tidak di-set)
PAIR_ON_START=false

# Weather API (weatherapi.com)
# Dapatkan API key dari https://www.weatherapi.com/
WEATHER_API_KEY=

# Opsional: mapping LID -> PN untuk tampilan (JSON atau format a=b,c=d)
# Contoh JSON: {"98385486971076":"6287770929129"}
# Contoh CSV: 98385486971076=6287770929129,anotherLid=62xxxxxxx
PN_MAP=

# Kode negara default untuk normalisasi nomor lokal (tanpa '+')
# Contoh: 62 untuk Indonesia
DEFAULT_COUNTRY_CODE=62

# Groq AI (OpenAI-compatible)
GROQ_API_KEY=
# Default model (contoh: llama-3.1-8b-instant, llama-3.1-70b-versatile)
AI_MODEL=llama-3.1-8b-instant
